<div id="sidebar">
  <!-- Logo -->
  <div id="logo">
    <h1><a href="<%- config.root %>"><%= config.title %></a></h1>
    <br />
    <h3><% if (config.subtitle){ %><%= config.subtitle %><% } %></h3>
  </div>
  
  <!-- Nav -->
  <nav id="nav">
    <ul>
      <% for (var i in theme.menu){ %>
      <li><a href="<%- theme.menu[i] %>"><%= i %></a></li>
      <% } %>
    </ul>
  </nav>


  <!-- Hexo Widgets -->
  <% theme.widgets.forEach(function(widget){ %>
    <%- partial('../_widget/' + widget) %>
  <% }); %>

  <!-- Copyright -->
  <%- partial('footer') %>

</div>
